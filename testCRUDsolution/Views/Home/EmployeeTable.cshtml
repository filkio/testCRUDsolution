@model IEnumerable<testCRUDsolution.Models.Employee>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CRUD сотрудники</title>
</head>
<body>
    <div>
        <h2>Список сотрудников:</h2>
        <table>
            <thead>
                <tr>
                    <th>ФИО</th>
                    <th>Должность</th>
                    <th>ДР</th>
                    <th>Текст</th>
                    <th>Декрет</th>
                </tr>
            </thead>
            <tbody>


                @foreach (testCRUDsolution.Models.Employee item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Position</td>
                        <td>@item.DateOfBirth</td>
                        <td>@item.Text</td>
                        @if (item.Decree)
                        {
                            @:<td>Да</td>
                        }
                        else
                        {
                            @:<td>Нет</td>
                        }
                    </tr>
                }


            </tbody>
        </table>
    </div>
</body>
</html>
