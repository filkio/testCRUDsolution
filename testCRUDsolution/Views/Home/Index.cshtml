@model IEnumerable<testCRUDsolution.Models.Employee>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CRUD сотрудники</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div>
        <h2 class="h2 text-center">Список сотрудников:</h2>
        <table class="table table-bordered table-hover">
            <thead class="text-center">
                <tr>
                    <th>ФИО</th>
                    <th>Должность</th>
                    <th>ДР</th>
                    <th>Текст</th>
                    <th>Декрет</th>
                </tr>
            </thead>
            <tbody>


                @foreach (testCRUDsolution.Models.Employee item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Position</td>
                        <td>@item.DateOfBirth.ToString("d")</td>
                        <td>@item.Text</td>
                        @if (item.Decree)
                        {
                            @:<td>Да</td>
                        }
                        else
                        {
                            @:<td>Нет</td>
                        }
                    </tr>
                }


            </tbody>
        </table>

            <a asp-action="EmployeeAdd" class="btn-dark text-decoration-none">Форма добавления</a>
  
    </div>
</body>
</html>
